<p id="notice"><%= notice %></p>
<%= link_to "Back", url_for(:back), class:"links"  %> |
<%= link_to 'Users', users_path, class:"links"  %>

<h1 class="twitter">Tweets</h1>
<br>
<%= link_to 'New Tweet', new_tweet_path, class:'btn' %>
<br><br>
<% @tweets.each do |tweet| %>
    <br>
    <section class="tweet">
        <strong><%= link_to tweet.user.name, @users.find(tweet.user.id), class: "tweet-name" %></strong>
        <p class="username">@<%= link_to tweet.user.username, @users.find(tweet.user.id), class: "tweet-username" %></p>
        <br>
        <%= link_to tweet.text, tweet, class: "tweet-text" %>
        <br><br>
    </section>
<% end %>
<br>

